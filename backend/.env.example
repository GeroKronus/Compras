# ===========================================
# CONFIGURAÇÃO PARA DESENVOLVIMENTO LOCAL
# ===========================================

# Database (Docker Local)
DATABASE_URL=postgresql://compras_user:compras_pass_2024@localhost:5433/compras_db

# JWT Security (IMPORTANTE: Gerar chave segura em produção!)
SECRET_KEY=sua-chave-secreta-muito-forte-aqui-min-32-caracteres-importante
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API
API_V1_STR=/api/v1
PROJECT_NAME=Sistema de Compras Multi-Tenant
ENVIRONMENT=development

# CORS (separado por vírgula)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Anthropic AI (OPCIONAL - deixar vazio se não tiver)
ANTHROPIC_API_KEY=

# Email (SMTP/IMAP - Zoho Mail)
SMTP_HOST=smtppro.zoho.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
IMAP_HOST=imappro.zoho.com
IMAP_PORT=993

# Jobs
ENABLE_SCHEDULED_JOBS=false

# Telegram Bot (notificações de propostas)
# NOTA: Configurações do Telegram são POR TENANT (multi-tenant)
# Configure via API ou diretamente na tabela tenants:
#   telegram_bot_token, telegram_chat_id, telegram_enabled

# ===========================================
# CONFIGURAÇÃO PARA PRODUÇÃO (RAILWAY)
# ===========================================
# No Railway, configure estas variáveis no painel:
#
# DATABASE_URL=${{Postgres.DATABASE_URL}}  <- Referência ao serviço Postgres
# SECRET_KEY=<gerar-chave-segura-64-chars>
# ENVIRONMENT=production
# BACKEND_CORS_ORIGINS=https://seu-frontend.railway.app,https://seu-dominio.com
# ANTHROPIC_API_KEY=<sua-api-key>
# SMTP_HOST=smtppro.zoho.com
# SMTP_PORT=465
# SMTP_USER=<seu-email@empresa.com>
# SMTP_PASSWORD=<senha-app>
# EMAIL_FROM=<seu-email@empresa.com>
# IMAP_HOST=imappro.zoho.com
# IMAP_PORT=993
# ENABLE_SCHEDULED_JOBS=true
#
# TELEGRAM: Configure nas configurações de cada tenant (tabela tenants)
